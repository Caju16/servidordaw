{% extends "base.twig" %}

{% block styles %}
    {{ parent() }}
    <link href="css/blog.css" type="text/css" rel="stylesheet" />
    <link href="css/web.css" type="text/css" rel="stylesheet" />
{% endblock %}

{% block nav %}
  <nav>
    <ul class="navigation">
      <li>
        <a href="/">Home</a>
      </li>
      <li>
        <a href="/about">About</a>
      </li>

       <li>
        <a href="/faq">FaQ</a>
      </li>

      {% if data.auth == true %}
        <li>
          <a href="/admin">Admin</a>
        </li>
        <li>
          <a href="/logout">Logout</a>
        </li>
      {% else %}
        <li>
          <a href="/login">Login</a>
        </li>
        <li>
          <a href="/register">Register</a>
        </li>
      {% endif %}
    </ul>
  </nav>
  <h1>
    {% if data.auth == true %}
      {{ data.userName }}
    {% else %}
      Invitado
    {% endif %}
  </h1>
{% endblock %}

{% block sidebar %}
    {{ include ("sidebar.twig", { data: data }) }}
{% endblock %}